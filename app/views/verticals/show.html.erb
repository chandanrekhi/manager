<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", verticals_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_vertical_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", vertical_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.vertical.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @vertical.name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.vertical.company_id", :default => t("activerecord.labels.company_id", :default => "Company")) %>:</b>
          <%= @vertical.company_id %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_vertical_path(@vertical), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), vertical_path(@vertical), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>